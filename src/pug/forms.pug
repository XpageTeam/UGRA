									input.forms__input(placeholder="" type="text" required="")
									label.forms__label Отчество
									.forms__error-message
										i.forms__error-message-icon
								.forms__input-cont
									input.forms__input(placeholder="" type="tel" required="")
									label.forms__label Телефон
									.forms__error-message
										i.forms__error-message-icon
								.forms__input-cont
									input.forms__input(placeholder="" type="email" required="")
									label.forms__label E-mail
									.forms__error-message
										i.forms__error-message-icon
								.forms__input-cont
									input.forms__input(placeholder="" type="text")
									label.forms__label Наименование компании
									.forms__error-message
										i.forms__error-message-icon
								.forms__input-cont
									input.forms__input(placeholder="" type="tel" required="")
